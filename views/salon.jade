extends layout

block content
	div.center
		each badge, i in bagdes
			case badge.moduloGanado
				when 'Génesis'
					img(src="/img/GENESIS.png",style="width:130px")
				when 'El Galeno'
					img(src="/img/ELGALENO.png",style="width:130px")
				when 'El Parche'
					img(src="/img/ELPARCHE.png",style="width:130px")
				when 'Nativo'
					img(src="/img/NATIVO.png",style="width:130px")
				when 'Mundo Ciber'
					img(src="/img/MUNDOCIBER.png",style="width:130px")
				when 'Historia de vida'
					img(src="/img/HISTORIA.png",style="width:130px")
	.first-form.center
		form#formLoginUser(name="loginuser",method="post",action="/genesis",style="display:inline !important;")
			input#inputCorreoElectronico(type="hidden", placeholder="correoElectronico", name="correoElectronico", value="#{user.correoElectronico}") 
			input.btn.btn-primary.big-button(type="submit", value='Génesis') 
		form#formLoginUser(name="loginuser",method="post",action="/parche",style="display:inline !important;")
			input#inputCorreoElectronico(type="hidden", placeholder="correoElectronico", name="correoElectronico", value="#{user.correoElectronico}") 
			input.btn.btn-primary.big-button(type="submit", value='El Parche') 
		br
		form#formLoginUser(name="loginuser",method="post",action="/native",style="display:inline !important;")
			input#inputCorreoElectronico(type="hidden", placeholder="correoElectronico", name="correoElectronico", value="#{user.correoElectronico}") 
			input.btn.btn-primary.big-button(type="submit", value='Nativo') 
		form#formLoginUser(name="loginuser",method="post",action="/ciber",style="display:inline !important;")
			input#inputCorreoElectronico(type="hidden", placeholder="correoElectronico", name="correoElectronico", value="#{user.correoElectronico}") 
			input.btn.btn-primary.big-button(type="submit", value='Mundo Ciber') 
		br
		form#formLoginUser(name="loginuser",method="post",action="/galeno",style="display:inline !important;")
			input#inputCorreoElectronico(type="hidden", placeholder="correoElectronico", name="correoElectronico", value="#{user.correoElectronico}") 
			input.btn.btn-primary.big-button(type="submit", value='El Galeno') 
		form#formLoginUser(name="loginuser",method="post",action="/historia",style="display:inline !important;")
			input#inputCorreoElectronico(type="hidden", placeholder="correoElectronico", name="correoElectronico", value="#{user.correoElectronico}") 
			input.btn.btn-primary.big-button(type="submit", value='Historia de Vida') 
		br
		br