extends layout

block content
	form#formAddUser(name="adduser",method="post",action="/adduser")
		.row
			.col-md-2
			.col-md-4.form-color(style="padding:20px")
				input#inputNombreCompleto(type="text", placeholder="nombreCompleto", name="nombreCompleto" required="required")
				br
				label(for="inputNombreCompleto") Nombre Completo
				br
				input#inputCorreoElectronico(type="email", placeholder="correoElectronico", name="correoElectronico" required="required")
				br
				label(for="inputCorreoElectronico") Correo Electrónico
				br
				input#inputContrasena(type="password", placeholder="contraseña", name="contrasena" required="required")
				br
				label(for="inputContrasena") Contraseña
				br
				input#inputPais(type="text", placeholder="pais", name="pais" required="required")
				br
				label(for="inputPais") País
				br
				input#inputCiudad(type="text", placeholder="ciudad", name="ciudad" required="required")
				br
				label(for="inputCiudad") Ciudad
				br
				input#inputFechaNacimiento(type="date", placeholder="fechaNacimiento", name="fechaNacimiento" required="required")
				br
				label(for="inputFechaNacimiento") Fecha de nacimiento
			.col-md-4
				a(href="/terminos")
					input.btn-primary.big-button(value="Leer términos y condiciones", type="button") 
				br
				p
					input.btn-primary(type="checkbox") 
					label.form-color Acepto términos y condiciones
				br
				button.btn-primary.big-button#btnSubmit(type="submit") Registrar
			.col-md-2